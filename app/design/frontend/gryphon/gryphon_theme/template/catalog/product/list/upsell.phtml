<?php if(count($this->getItemCollection()->getItems())): ?>

<div class="suggestion similar-product">
    <h5><?php echo $this->__('tea layering suggestion'); ?></h5>
    <?php 
    $object = Mage::getModel('catalog/product');
    $product_id = $this->getProduct()->getId();    
    $_product = $object->load($product_id);
    $upsell_product = $_product->getUpSellProductCollection()->addAttributeToSort('position', Varien_Db_Select::SQL_ASC)->addStoreFilter(); 
    $count = count($upsell_product);
    ?>
    <ul class="suggestion-list all-products <?php if($count > 3): ?>two-column <?php echo $count; ?><?php endif; ?>">
        <?php // $this->setColumnCount(5); // uncomment this line if you want to have another number of columns. also can be changed in layout ?>        
        <?php foreach($upsell_product as $_upsell): ?>
            <?php 
            $upsp = $object->load($_upsell->getId());
            $add_to_cart_url = Mage::helper('checkout/cart')->getAddUrl($upsp); ?>
            <li class="each-product">
                <a href="<?php echo $upsp->getProductUrl() ?>" title="<?php echo $this->escapeHtml($upsp->getName()) ?>" class="product-image img-responsive">
                    <img src="<?php echo $this->helper('catalog/image')->init($upsp, 'thumbnail')->backgroundColor(array(0, 0, 0))->constrainOnly(false)->keepAspectRatio(true)->keepFrame(true)->resize(140, 104) ?>" alt="<?php echo $this->escapeHtml($upsp->getName()) ?>" />
                </a>
                <ul>
                    <li><a href="<?php echo $upsp->getProductUrl() ?>">View Details <i class="fa fa-angle-right" aria-hidden="true"></i></a></li>
                    <!-- <li><a href="<?php echo $add_to_cart_url; ?>">Add To Cart <i class="fa fa-angle-right" aria-hidden="true"></i></a></li> -->
                </ul>                        
            </li>
        <?php endforeach; ?>
    </ul>
</div>

<?php endif; ?>