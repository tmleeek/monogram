<?php if(count($this->getItemCollection()->getItems())): ?>

<div class="suggestion similar-product">
    <h5><?php echo $this->__('tea layering suggestion'); ?></h5>
    <ul class="suggestion-list all-products">
        <?php // $this->setColumnCount(5); // uncomment this line if you want to have another number of columns. also can be changed in layout ?>
        <?php $this->resetItemsIterator(); $counter = 0; ?>
        <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
            <?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
                <?php if($_link=$this->getIterableItem()): ?>
                    <?php if($counter >= 4) break; ?>
                    <?php $counter++; ?>
                    <?php 
                    (isset($_link->getData()['entity_id'])) ? $upsell_product_id = $_link->getData()['entity_id'] : $upsell_product_id = 0; 

                    $upsell_product = Mage::getModel('catalog/product')->load($upsell_product_id);
                    $add_to_cart_url = Mage::helper('checkout/cart')->getAddUrl($upsell_product);
                    ?>
                    <li class="each-product">
                        <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>" class="product-image img-responsive">
                            <img src="<?php echo $this->helper('catalog/image')->init($_link, 'thumbnail')->backgroundColor(array(0, 0, 0))->constrainOnly(false)->keepAspectRatio(true)->keepFrame(true)->resize(140, 104) ?>" alt="<?php echo $this->escapeHtml($_link->getName()) ?>" />
                        </a>
                        <ul>
                            <li><a href="<?php echo $_link->getProductUrl() ?>">View Details <i class="fa fa-angle-right" aria-hidden="true"></i></a></li>
                            <!-- <li><a href="<?php echo $add_to_cart_url; ?>">Add To Cart <i class="fa fa-angle-right" aria-hidden="true"></i></a></li> -->
                        </ul>                        
                    </li>
                <?php endif; ?>
            <?php endfor; ?>
        <?php endfor; ?>
    </ul>
</div>

<?php endif; ?>